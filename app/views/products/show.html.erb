<section class="products-show">
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>
  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>
  <div class="reviews">
    <div class="row">
      <div class="col-sm-1">
        &nbsp;
      </div>
      <div class="col-sm-7">
        <h4 class="review">Reviews</h4>
        <table class="table table-bordered reviews">
          <thead>
            <tr>
              <th>Reviewer</th>
              <th>Rating</th>
              <th>Description</th>
              <th>Created</th>
              <% if current_user && has_reviews?(@product.id, current_user.id) %>
                <th>&nbsp;</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @product.reviews.reverse.each do |review| %>
              <%= render 'review', review: review %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-sm-3">
        <h4 class="review">Submit Review</h4>
        <% if current_user %>
          <% flash.each do |key, value| %>
            <p class="<%= key %>"><%= value %></p>
          <% end %>
          <!-- Start review creation form -->
          <%= form_for [@product, @review] do |form| %>
            <div class="form-group">
              <%= form.label :rating %>
              <%= form.select(:rating, (1..5).each { |i| i }, prompt: '#') %>
            </div>
            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.submit 'Submit', class: "btn btn-primary" %>
            </div>
          <% end %>
          <!-- End review creation form -->
        <% else %>
          <p>
            Please <%= link_to 'register', :users %> or <%= link_to 'login', [:session, :login] %> to submit a review
            </p>
        <% end %>
      </div>
    </div>
  </div>
</section>