<%= form_for [@product, @review] do |form| %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.select(:rating, (1..5).each { |i| i }, prompt: '#') %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit 'Submit', class: "btn btn-primary" %>
  </div>
<% end %>
