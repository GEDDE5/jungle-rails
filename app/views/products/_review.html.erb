<tr>
  <td>
    <% if User.exists?(review.user_id) %>
      <%= User.find(review.user_id).first_name %>
    <% else %>
      ?
    <% end %>
  </td>
  <td>
    <% (1..review.rating).each do |i| %>
      <i class="fa fa-star" aria-hidden="true"></i>
    <% end %>
  </td>
  <td>
    <%= review.description %>
  </td>
  <td>
    <%= time_ago_in_words(review.created_at) %> ago
  </td>
  <% if current_user && Product.find(review.product_id).reviews.exists?(user_id: current_user.id) %>
    <td>
      <% if current_user.id == review.user_id %>
        <%= link_to product_review_path(review.product_id, review.id), method: :delete do %>
          <i class="fa fa-times" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </td>
  <% end %>
</tr>