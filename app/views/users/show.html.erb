<section class="register">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <header class="page-header">
                <h1>Register</h1>
            </header>
            <%= form_for [:user, @user], url: "/register" do |form| %>

              <% if form.object.errors.any? %>
                <div class="alert alert-danger">
                  <strong>The following errors prevented saving:</strong>
                  <ul>
                    <% form.object.errors.full_messages.each do |error| %>
                      <li><%= error %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group">
                  <%= form.label :first_name %>:
                  <%= form.text_field :first_name, class: "form-control" %><br />
              </div>
              <div class="form-group">
                  <%= form.label :last_name %>:
                  <%= form.text_field :last_name, class: "form-control" %><br />
              </div>
              <div class="form-group">
                  <%= form.label :email %>:
                  <%= form.email_field :email, class: "form-control" %><br />
              </div>
              <div class="form-group">
                  <%= form.label :password %>:
                  <%= form.password_field :password, class: "form-control" %><br />
              </div>
              <div class="form-group">
                  <%= form.label "Confirm password" %>:
                  <%= form.password_field :password_confirmation, class: "form-control" %><br />
              </div>
              <%= form.submit 'Submit', class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
</section>